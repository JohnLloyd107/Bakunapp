<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210sp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="25sp"
            android:background="@drawable/bakunaaplogo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/home_res"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/checkbtn"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="7sp"
                android:background="@drawable/home_res_btn" />

            <ImageView
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/profile_ic_home"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Account"
                android:textColor="#424242"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="65dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Login to check your Bakunapp Account"
                android:textColor="#424242"
                android:textSize="14dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/regesterbtn"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="7sp"
                android:background="@drawable/home_res_btn2" />

            <ImageView
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:src="@drawable/reg_ic_home"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25sp" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110sp"
                android:layout_marginTop="30sp"
                android:text="Register"
                android:textColor="#424242"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110sp"
                android:layout_marginTop="65sp"
                android:fontFamily="sans-serif-condensed"
                android:text="Click here to start Registering your Account"
                android:textColor="#424242"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:layout_marginTop="10sp">

            <ImageView
                android:id="@+id/List"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="7sp"
                android:background="@drawable/home_res_btn3" />

            <ImageView
                android:src="@drawable/admin_ic_home2"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25sp"
                 />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110sp"
                android:layout_marginTop="30sp"
                android:text="Admin"
                android:textColor="#424242"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="65dp"
                android:text="For Staff Only"
                android:textColor="#424242"
                android:textSize="14dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>